<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<link href="http://code.jquery.com/ui/1.9.1/themes/base/jquery-ui.css" rel="stylesheet"
		type="text/css" />
	<link href="@Url.Content("~/Content/layout-default-1.3.0-rc30.72.css")" rel="stylesheet" type="text/css" />
	<style type="text/css">
		.hidden
		{
			display: none;
		}
	</style>
	<script src="http://code.jquery.com/jquery-1.8.2.js" type="text/javascript"></script>
	<script src="http://code.jquery.com/ui/1.9.1/jquery-ui.js" type="text/javascript"></script>
	<script src="@Url.Content("~/Content/Scripts/jquery.layout-1.3.0-rc30.72.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Content/Scripts/jquery.layout.resizeTabLayout-1.2.js")" type="text/javascript"></script>
	<script type="text/javascript">

		$(function () {

			$("body").layout({
				name: "mainLayout",
				north__paneSelector: "#main-header",
				center__paneSelector: "#main-body",
				south__paneSelector: "#main-footer"
			});

		});
		
	</script>
	@RenderSection("script", false)
</head>
<body>
	<div id="main-header" class="hidden">
		Header
	</div>
	<div id="main-body" class="hidden" style="background-color: brown; overflow: auto; padding: 0 10px;">
		@RenderBody()
	</div>
	<div id="main-footer" class="hidden">
		Footer
	</div>
</body>
</html>
