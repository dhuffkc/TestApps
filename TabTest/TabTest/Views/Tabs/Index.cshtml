@section script
{
	<script type="text/javascript">

		$(function () {
			$("#tab-layout")
				.tabs()
				.layout({
					north__paneSelector: "UL",
					center__paneSelector: "DIV",
					resizable: false,
					slidable: false,
					closable: false,
					north__spacing_open: 0
				});
		});

	</script>
	<style type="text/css">
		
		/* for tab panels */
		#tab-layout > .ui-layout-pane-center > .ui-tabs-panel {
			background-color: orange;
			height: 100%;
			overflow: hidden;
			padding: 0 10px;
		}

	</style>
}
<div id="tab-layout" style="background-color: lightgrey; border: 0; height: 100%; overflow: hidden; padding: 0 10px;">
	<ul>
		<li><a href="#tab1">One</a></li>
		<li><a href="@Url.Action("LayoutContent")">Layout</a></li>
		<li><a href="@Url.Action("DateContent")">Dates 1</a></li>
		<li><a href="@Url.Action("DateContent")">Dates 2</a></li>
	</ul>
	<div style="background-color: pink; overflow: hidden; padding: 0 10px;">
		<div id="tab1">
			Tab One content.
		</div>
	</div>
</div>
