@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<title>Tabs Index</title>
	<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/layout-default-1.3.0-rc30.72.css")" rel="stylesheet" type="text/css" />
	<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.5.1.js")"></script>
	<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.9.0.js")"></script>
	<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.layout-1.3.0-rc30.72.js")"></script>
	<script type="text/javascript">

		$(function () {
			$("body").layout({
				center__onresize: function () {
					$("#tabsContainer").resize();
				}
			});
			
			$("#tabsContainer")
				.tabs({
					activate : function (event, ui) {
						// debugger;
					},
					beforeActivate : function (event, ui) {
						// debugger;
					}
				})
				.resize(function (event) {
					// debugger;
					// set the height of the content in the active tab panel
					var panel = $("#tabsContainer .ui-tabs-panel:visible");
					var content = panel.find(":first");
					var h = panel.height();
					content.height(h);
				})
				.tabs("url", 0, "@Url.Action("LayoutContent")")
				.tabs("url", 1, "@Url.Action("DateContent")")
				.tabs("load", 0);
		});

	</script>
	<style type="text/css">
		
		#tabsContainer {
			border-radius: 0;
			overflow: hidden;
			padding: 0 0 1px 0;
		}

		#tabsContainer .ui-widget-header {
			border-radius: 0;
			border-width: 0 0 1px 0;
		}

	</style>
</head>
<body>
	<div class="ui-layout-north">
		Header
	</div>
	<div class="ui-layout-center" id="tabsContainer" style="background-color: lightblue; padding: 0px;">
		<ul>
			<li><a href="#layoutTab">Layout Content</a></li>
			<li><a href="#dateTab">Date Content</a></li>
		</ul>
		<div id="layoutTab"" class="ui-layout-content" style="background-color: yellowgreen; padding: 0 0 1px 0;">
			Layout Content.</div>
		<div id="dateTab" class="">
			Date Content.</div>
	</div>
	<div class="ui-layout-south">
		Footer
	</div>
</body>
</html>
